{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "./build.sh"
    },
    "deploy": {
      "runtime": "V2",
      "startCommand":"uv run main.py",
      "numReplicas": 1,
      "sleepApplication": false,
      "multiRegionConfig": {
        "asia-southeast1-eqsg3a": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }